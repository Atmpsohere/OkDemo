<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/dingzhi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager_frist"
                android:layout_width="match_parent"
                android:layout_height="170dp"></android.support.v4.view.ViewPager>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a8a8a8" />

            <TextView
                android:id="@+id/shuangxian_text"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="双线课"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a8a8a8" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager_shuang"
                android:layout_width="match_parent"
                android:layout_height="160dp"></android.support.v4.view.ViewPager>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a8a8a8" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/mingshi"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="名师中心"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/more"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="250dp"
                    android:layout_toRightOf="@+id/mingshi"
                    android:gravity="center"
                    android:text="更多"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a8a8a8" />

            <GridView
                android:id="@+id/gridView1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:numColumns="4">

            </GridView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a8a8a8" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/haoping"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="好评课程"
                    android:textSize="13sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a8a8a8" />

            <GridView
                android:id="@+id/gridView2"
                android:layout_width="match_parent"
                android:layout_height="241.5dp"
                android:numColumns="2">

            </GridView>

            <Button
                android:id="@+id/dingzhi"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/dingzhi_shape"
                android:gravity="center"
                android:text="去定制更多内容"
                android:textColor="#fff"
                android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
